# .env.example (commit this to repo)
# Copy this file to .env and customize for your setup

# Path to your MaNGOS server log directory
MANGOS_LOG_PATH=/home/mangos/mangos/zero/bin

# MaNGOS process name (check with: ps aux | grep mangos)
MANGOS_PROCESS_NAME=mangosd
REALM_PROCESS_NAME=realmd

# MySQL Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=mangos
MYSQL_USER=mangos_monitor
MYSQL_PASSWORD=generate_secure_password_here

# Grafana configuration
GRAFANA_PORT=3000
GF_LOG_LEVEL=info
